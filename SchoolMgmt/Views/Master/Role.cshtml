@using SchoolMgmt.Models;
@{
    ViewBag.Title = "Role List";
    List<Mst_Role> roleList = (List<Mst_Role>)ViewData["roleList"];
}

<h2>Role List</h2>

<div class="wrapper">
    <div class="content-wrapper">
        <section class="content-header">
            <h1>
                Roles List
            </h1>
        </section>
        <section class="content">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-body">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Role</th>
                                        <th>Is Active</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var role in roleList)
                                    {
                                        <tr>
                                            <td>@role.roleName</td>
                                            <td>
                                                <img src="@(role.isActive == true ? "~/Images/Active.png" : "~/Images/InActive.png")" alt="" />
                                            </td>
                                            <td><i class="fa fa-fw fa-edit"></i><i class="fa fa-fw fa-trash"></i></td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Role</th>
                                        <th>Is Active</th>
                                        <th>Action</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
